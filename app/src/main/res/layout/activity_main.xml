<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="333dp"
        android:layout_height="333dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/button_happy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintLeft_toLeftOf="@id/imageView"
        android:text="Glad" />

    <Button
        android:id="@+id/button_funny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintRight_toRightOf="@id/imageView"
        android:text="Rolig" />

    <TextView
        android:id="@+id/cop_happy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/happyCop"
        app:layout_constraintTop_toBottomOf="@id/button_happy"
        app:layout_constraintLeft_toLeftOf="@id/button_happy"/>

    <TextView
        android:id="@+id/cop_funny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/funnyCop"
        app:layout_constraintTop_toBottomOf="@id/cop_happy"
        app:layout_constraintLeft_toLeftOf="@id/cop_happy"/>

    <TextView
        android:id="@+id/title"
        app:layout_constraintBottom_toTopOf="@id/imageView"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Klicka på knapp för att visa Gif" />

</androidx.constraintlayout.widget.ConstraintLayout>